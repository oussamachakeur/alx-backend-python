#!/bin/bash

echo "ğŸ“¦ Applying updated blue deployment with image version 2.0..."
kubectl apply -f messaging_app/blue_deployment.yaml

echo "â³ Monitoring rollout status..."
kubectl rollout status deployment/django-blue

echo "ğŸŒ Starting port-forward to access the service locally..."
kubectl port-forward svc/django-service 8000:8000 > /dev/null 2>&1 &
PORT_PID=$!
sleep 5

echo "ğŸ§ª Sending requests with curl to test for disruption (Ctrl+C to stop)..."
for i in {1..10}; do
    curl -s http://127.0.0.1:8000/ || echo "âŒ Request failed"
    sleep 1
done

echo "ğŸ›‘ Stopping port-forward..."
kill $PORT_PID

echo "ğŸ“‹ Checking current pods..."
kubectl get pods -l app=django

echo "âœ… Rolling update completed."
